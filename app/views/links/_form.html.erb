<%= form_for @link do |f| %>

<% if @link.errors.any? %>
<div id="errors_explanation">
  <h2><%= pluralize(@link.errors.count, "error") %>
    prohibited this post from being saved:</h2>

    <ul>
    <% @link.errors.full_messages.each do |message| %>
    <li><%=message%></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :title, 'Title:' %>
  <%= f.text_field :title, required:true, class:'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description, 'Desciption:' %>
  <%= f.text_field :description, required:true, class:'form-control' %>
</div>

<div class="form-group">
  <%= f.label :url, 'URL:' %>
  <%= f.text_field :url, rows:10, required:true, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category, 'Category:' %>
    <%= f.text_field :category, rows:10, required:true, class:'form-control' %>
    </div>


  <div>
    <%= f.submit "#{action} Link" %>
    <div class="form-group text-right">
      <%= link_to 'Cancel', links_path, class: 'btn btn-danger'%>
      <% f.submit "#{action} Link", class: 'btn btn-success' %>
  </div>
  <% end %>
